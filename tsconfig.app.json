{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022", // تحديد إصدار جافا سكريبت الناتج
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ], // المكتبات المتاحة أثناء التطوير
    "module": "ESNext", // نظام الموديولات المستخدم
    "types": [
      "vite/client"
    ], // أنواع البيانات الخاصة بـ Vite
    "skipLibCheck": true, // تسريع عملية الفحص بتخطي مكتبات node_modules
    /* وضع المجمع (Bundler mode) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true, // عدم إنتاج ملفات js (Vite يتكفل بذلك)
    "jsx": "react-jsx", // دعم JSX الخاص بـ React
    /* التدقيق البرمجي (Linting) */
    "strict": true, // تفعيل الوضع الصارم لـ TypeScript
    "noUnusedLocals": true, // التحذير من المتغيرات المحلية غير المستخدمة
    "noUnusedParameters": true, // التحذير من الباراميترز غير المستخدمة
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src"
  ] // الملفات المشمولة في الفحص
}